<!-- Modal -->
<section class="modal js-modal" role="dialog" aria-modal="true" aria-labelledby="modal-title" aria-hidden="true">
    <div class="form-container">
        <div class="content-wrapper">
            <div class="left-content__wrapper">
                <button class="exit-button" type="button" aria-label="Close dialog">
                    <img src="{{ site.pathPrefix }}/images/modal-exit.svg" alt="" width="18" height="18">
                </button>
                <p class="form-info">Authorization:</p>
                <a class="google" href="https://accounts.google.com/signin/v2/usernamerecovery?flowName=GlifWebSignIn&flowEntry=ServiceLogin" target="_blank" rel="noopener noreferrer">
                    Login with Google
                </a>
                <a class="facebook" href="https://www.facebook.com/?email_confirmed=1" target="_blank" rel="noopener noreferrer">
                    Login with Facebook
                </a>
            </div>
            
            <form class="input-question" action="#" method="POST" novalidate>
                <h2 class="form-heading" id="modal-title">Ask a question</h2>
                
                <label for="modal-name" class="visually-hidden">Your name</label>
                <input class="input-name" type="text" id="modal-name" name="name" placeholder="Enter your name" required minlength="2" maxlength="100" autocomplete="name">
                
                <label for="modal-question" class="visually-hidden">Your question</label>
                <textarea class="question-input" id="modal-question" name="question" cols="30" rows="10" placeholder="Write your question here" required minlength="10" maxlength="1000"></textarea>
                
                <button class="form-button" type="submit">Send</button>
            </form>
        </div>
    </div>
</section>
<!-- /Modal -->
